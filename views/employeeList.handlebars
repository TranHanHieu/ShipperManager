<div class="container" style="width:100%;background: white;padding: 50px">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-title">
                <h4>Danh sách nhân viên </h4>
                <button class="btn btn-success" id="btnAddEmploye" style="float: right">Thêm</button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>STT</th>
                            <th>Avatar</th>
                            <th>Tên</th>
                            <th>Chức vụ</th>
                            <th>Trạng thái</th>
                            <th>Số điện thoại</th>
                            <th>Lộ trình</th>
                            <th>Sửa</th>
                            <th>Xóa</th>

                        </tr>
                        </thead>
                        <tbody>
                        <!--vòng lặp để hiển thị danh sách nhân viên -->
                        {{#each users}}
                            <tr>
                                <td><span>{{@index}}</span></td>
                                <td>

                                    {{#if avatar}}
                                        <img style="width: 40px;height: 40px;border-radius: 30px" src={{avatar}}>
                                    {{else}}
                                        <div class="text-14" style="
                                                background:{{getBGColor fullname}} ;
                                                width: 40px;
                                                height: 40px;
                                                border-radius: 50%;
                                                color: #fff;
                                                padding: 10px;
                                                text-align: center">{{getSortName fullname}}</div>
                                    {{/if}}

                                </td>
                                <td>{{fullname}}</td>
                                <td><span style="text-decoration: underline">{{group.groupname}}</span></td>
                                <td>

                                    <!--{{#if  trangthai}}-->
                                        <span id="trangthai" style="background: {{mamautrangthai}}" class="text-14 badge badge-success">{{trangthai}}</span>
                                    <!--{{else}}-->
                                        <!--<span id="trangthai" class="text-14 badge badge-success">{{trangthai}}</span>-->
                                    <!--{{/if }}-->
                                </td>
                                <td><span style="text-decoration: underline">{{sodienthoai}}</span></td>
                                <td>
                                    <div>
                                        <i class="fa fa-map-marker" style="font-size:16px;color:red"></i>
                                        <a href="detailEmployee?id={{_id}}">Xem lộ trình</a>
                                    </div>
                                </td>
                                <td>
                                    <a href="edit?id={{_id}}">
                                        <img height="16" width="16" src="images/edit.png">
                                    </a>
                                </td>
                                <td><a href="javascript:deleteEmployee('{{_id}}','{{fullname}}')"><img
                                        height="16" width="16" src="images/delete.png"></a></td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
<script src = "js/employeeList.js"></script>
