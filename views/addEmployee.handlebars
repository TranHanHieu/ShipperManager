<form action="/api/user/" method="post">
    <div class="container" style="width:100%;background: white;padding: 50px">

        <div class="card-body">
            <div class="form-body">
                <h3 class="card-title m-t-15">Thông tin nhân viên</h3>
                <hr>
                <div class="row p-t-20">
                    <!--<div class="col-md-6">-->
                    <!--<div class="form-group">-->
                    <!--<label class="control-label">ID</label>-->
                    <!--<input name="id" readonly value="{{id}}" type="text" id="id" class="form-control"-->
                    <!--placeholder="ID">-->
                    <!--</div>-->
                    <!--</div>-->
                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group has-danger">
                            <label class="control-label">Tên nhân viên</label>
                            <input name="fullname" type="text" id="fullnamenv"
                                   class="form-control form-control-danger" placeholder="Tên nhân viên">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group has-success">
                            <label class="control-label">Vi tri</label>
                            <select id="chucvunv" name="chucvunv" class="form-control custom-select" title="Chức vụ">
                                {{#each groups}}
                                    <option value="{{_id}}">{{groupname}}</option>
                                {{/each}}
                            </select>

                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group has-danger">
                            <label class="control-label">Email</label>
                            <input name="email" type="email" id="emailnv"
                                   class="form-control form-control-danger" placeholder="Email">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group has-danger">
                            <label class="control-label">Ngày sinh</label>
                            <input name="ngaysinhnv" type="date" id="ngaysinhnv"
                                   class="form-control form-control-danger" placeholder="Ngày sinh">
                        </div>
                    </div>
                </div>
                <div class="row">

                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Tên đăng nhập</label>
                            <input name="username" id="username" type="text" class="form-control"
                                   placeholder="Tên đăng nhập">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Mật khẩu</label>
                            <input name="matkhau" id="matkhau" type="password" class="form-control"
                                   placeholder="Mật khẩu">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Xác nhận mật khẩu</label>
                            <input name="xnmatkhau" id="xnmatkhau" type="password" class="form-control"
                                   placeholder="Xác nhận mật khẩu">
                        </div>
                    </div>
                    <!--/span-->
                </div>
                <!--</div>-->
                <!--</div>-->
                <!--&lt;!&ndash;/span&ndash;&gt;-->
